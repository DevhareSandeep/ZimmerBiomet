<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="sg.totalebizsolutions.zimmer.util.TypefaceFactory"/>
  </data>
  <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:orientation="vertical">
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginBottom="16dp"
          android:background="@color/black"
          app:layout_constraintBottom_toTopOf="@+id/file_name_text_view"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:id="@+id/image_view"
               android:layout_width="220dp"
               android:layout_height="220dp"
               android:background="@color/black"
               android:contentDescription="@null"
               android:scaleType="centerCrop"
               app:layout_constraintBottom_toTopOf="@+id/file_name_text_view"
               app:layout_constraintDimensionRatio=""
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               tools:src="@drawable/ic_pdf"/>
    <TextView android:id="@+id/file_name_text_view"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="32dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:ellipsize="end"
              android:maxLines="1"
              android:textColor="@color/dark"
              android:textSize="14dp"
              android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
              app:layout_constraintBottom_toTopOf="@+id/breadcrumbs_text_view"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              tools:ignore="RtlHardcoded,SpUsage"
              tools:text="Lorem Impsum"/>
    <View android:layout_width="0dp"
          android:layout_height="1px"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:background="@color/divider"
          app:layout_constraintBottom_toTopOf="@id/breadcrumbs_text_view"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:id="@+id/breadcrumbs_text_view"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:drawableLeft="@drawable/ic_breadcrumbs"
              android:drawablePadding="18dp"
              android:ellipsize="middle"
              android:maxLines="1"
              android:textColor="@color/dark"
              android:textSize="14dp"
              android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
              app:layout_constraintBottom_toTopOf="@+id/format_text_view"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              tools:ignore="RtlHardcoded,SpUsage"
              tools:text="Lorem Impsum"/>
    <TextView android:id="@+id/format_text_view"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:drawableLeft="@drawable/ic_format"
              android:drawablePadding="18dp"
              android:ellipsize="end"
              android:maxLines="1"
              android:textColor="@color/dark"
              android:textSize="14dp"
              android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              tools:ignore="RtlHardcoded,SpUsage"
              tools:text="Lorem Impsum"/>
  </android.support.constraint.ConstraintLayout>
</layout>
