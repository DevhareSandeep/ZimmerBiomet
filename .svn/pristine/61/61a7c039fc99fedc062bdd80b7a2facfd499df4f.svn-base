<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sg.totalebizsolutions.zimmer">

  <application
      android:name=".ZimmerApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="false"
      android:theme="@style/AppTheme">
    <activity android:name=".views.login.LoginActivity"
              android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".ZimmerActivity"
              android:exported="false"
              android:screenOrientation="portrait"
              android:windowSoftInputMode="stateHidden"/>

    <activity android:name=".views.privacy.PrivacyPolicyActivity"
              android:exported="false"
              android:screenOrientation="portrait"
              android:windowSoftInputMode="stateHidden"/>
  </application>
</manifest>