<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="sg.totalebizsolutions.genie.util.TypefaceFactory"/>
  </data>
  <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <sg.totalebizsolutions.genie.util.CustomVideoView
        android:id="@+id/videoview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"

        android:layout_marginBottom="36dp"


        app:layout_constraintBottom_toTopOf="@+id/file_name_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />
      <WebView
          android:id="@+id/webview"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:layout_alignParentTop="true"

          android:layout_marginBottom="36dp"


          app:layout_constraintBottom_toTopOf="@+id/file_name_text_view"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintVertical_bias="1.0" />
    <TextView android:id="@+id/duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/file_name_text_view"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:textColor="@color/dark"
        android:textSize="14dp"
        android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"

        tools:ignore="RtlHardcoded,SpUsage"
        tools:text="Lorem Impsum"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/fullscreen"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:src="@drawable/ic_fullscreen"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded" />
    <ImageView android:id="@+id/image_view"
        android:layout_width="66dp"
        android:layout_height="67dp"

        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/file_name_text_view"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_pdf"/>
    <TextView android:id="@+id/file_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/dark"
        android:textSize="14dp"
        android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
        app:layout_constraintBottom_toTopOf="@+id/breadcrumbs_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage"
        tools:text="Lorem Impsum"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView android:id="@+id/breadcrumbs_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_breadcrumbs"
        android:drawablePadding="18dp"
        android:ellipsize="middle"
        android:maxLines="1"
        android:textColor="@color/dark"
        android:textSize="14dp"
        android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
        app:layout_constraintBottom_toTopOf="@+id/format_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage"
        tools:text="Lorem Impsum"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
    <TextView android:id="@+id/format_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_format"
        android:drawablePadding="18dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/dark"
        android:textSize="14dp"
        android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage"
        tools:text="Lorem Impsum"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
  </android.support.constraint.ConstraintLayout>
</layout>
